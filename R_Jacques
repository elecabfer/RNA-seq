ge = read.delim("genes_expression.txt")
Irpkm = grep("rpkm",names(ge))
medians = apply(ge[,Irpkm],1,median)
I5 = which(medians > 5)
ge5 = ge[I5,]
write.table(ge5,file="gene_expression_rpkm5.txt",sep="\t",quote=F,row.names=F)

